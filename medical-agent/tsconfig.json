{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "types": ["node"],
    "lib": ["ES2020"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["agent", "client"],
  "exclude": ["node_modules", "dist"]
}

